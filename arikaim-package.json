{      
    "title": "Arcade Site",
    "version": "1.7.1",
    "name": "arcade",
    "package-type": "template",
    "icon": "gamepad",
    "thumbnail": "arcade-site-thumbnail.jpg",
    "repository": "https://github.com/arikaim/arcade-template.git",
    "require": {
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "fomantic",
            "adsense:optional",
            "js-dos:optional",
            "tailwind"
        ],
        "extensions": [
            "arcade",
            "tags",
            "share",
            "users",
            "category",
            "rating",
            "captcha:optional",
            "comments:optional"
        ]
    },
    "languages": [
        "en",
        "de",
        "es",
        "ru"      
    ],
    "routes": [
        {
            "path": "/leaderboard",           
            "page": "arcade>leaderboard",
            "language-path": true,
            "name": "Leaderboard"                   
        },
        {
            "path": "/about",      
            "language-path": true,     
            "page": "arcade>about",
            "name": "About"                   
        }
    ],
    "include": {     
        "components": [
            "arcade>users",
            "components:policy.cookie.dialog",
            "arcade::api",
            "components:paginator"
        ],         
        "css": [
            "arcade.css"
        ],        
        "library": [
            "jquery",
            "adsense",
            "arikaim",
            "arikaim-ui",
            "fomantic",
            "js-dos",           
            "tailwind"
        ]      
    }   
}