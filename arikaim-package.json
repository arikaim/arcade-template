{      
    "title": "Arcade Site",
    "version": "1.4.5",
    "name": "arcade",
    "package-type": "template",
    "icon": "gamepad",
    "thumbnail": "arcade-site-thumbnail.jpg",
    "repository": "https://github.com/arikaim/arcade-template.git",
    "require": {
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "fomantic",
            "adsense",
            "tailwind"
        ],
        "extensions": [
            "arcade",
            "tags"
        ]
    },
    "routes": [
        {
            "path": "/leaderboard",           
            "page": "arcade>leaderboard",
            "name": "Leaderboard"                   
        },
        {
            "path": "/about",           
            "page": "arcade>about",
            "name": "About"                   
        }
    ],
    "include": {     
        "components": [
            "arcade>users",
            "components:policy.cookie.dialog",
            "arcade::api",
            "components:paginator"
        ],         
        "css": [
            "arcade.css"
        ],        
        "library": [
            "jquery",
            "adsense",
            "arikaim",
            "arikaim-ui",
            "fomantic",
            "tailwind"
        ],
        "loader": "components:loader.dimmer.light"
    }   
}